@model CentralLibrary.ViewModels.User.RegisterViewModel

<div class="cta section container">
    <div class="cta-inner section-inner justify-content-center">
        <div class="row">
            @if (TempData.ContainsKey("ErrorRegisterMessage"))
            {
                <div class="alert alert-danger">
                    @TempData["ErrorRegisterMessage"]
                </div>
            }
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create!</button>
                            <a id="return" asp-controller="Home" asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Return</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
